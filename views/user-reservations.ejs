<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Reservations</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      display: flex;
      height: 100vh;
      background-color: #f5f5f5;
    }

    .container {
      display: flex;
      width: 100%;
      height: 100vh;
    }

    /* Sidebar */
    .sidebar {
      width: 15%;
      background-color: #004AAD;
      padding: 20px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-start;
      transition: width 0.3s ease; /* Transition for collapsibility */
    }

    .sidebar.collapsed {
      width: 60px;
      padding: 10px;
    }

    .sidebar img {
      width: 80px;
      height: 80px;
      border-radius: 50%;
      margin-bottom: 15px;
      border: 3px solid #fff;
      transition: transform 0.3s ease;
    }

    .sidebar.collapsed img {
      transform: scale(0);
    }

    .sidebar h2 {
      font-size: 16px;
      margin-bottom: 30px;
      color: white;
      transition: transform 0.3s ease;
    }

    .sidebar.collapsed h2 {
      transform: scale(0);
    }

    .sidebar a {
      text-decoration: none;
      color: white;
      font-size: 16px;
      margin-bottom: 20px;
      display: flex;
      align-items: center;
      width: 100%;
      padding-left: 15px;
      transition: transform 0.3s ease;
    }

    .sidebar.collapsed a {
      transform: scale(0);
    }

    .sidebar a:hover {
      background-color: #3a9a90;
      border-radius: 5px;
    }

    .sidebar-toggle {
      position: absolute;
      top: 20px;
      left: 20px;
      background-color: #004AAD;
      border: none;
      color: white;
      cursor: pointer;
      font-size: 18px;
      padding: 10px;
    }

    .main-content {
      width: 85%;
      padding: 40px;
      transition: width 0.3s ease;
    }

    .sidebar.collapsed + .main-content {
      width: 95%;
    }

    /* Table Styling */
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    th, td {
      padding: 12px;
      text-align: center;
    }

    th {
      background-color: #004AAD;
      color: white;
      font-weight: bold;
    }

    td {
      color: black;
    }

    tr:nth-child(odd) {
      background-color: #FAF8F8;
    }

    tr:nth-child(even) {
      background-color: white;
    }

    tr:hover {
      background-color: #e0e0e0;
    }

    /* Button Styling */
    .btn {
      padding: 8px 10px;
      border: none;
      color: white;
      border-radius: 5px;
      cursor: pointer;
    }

    .btn.cancel {
      background-color: #f44336;
    }

    .btn.completed {
      background-color: green;
      cursor: default;
    }

    .btn:hover {
      background-color: #8FD0B3;
    }

    /* Pagination */
    .pagination {
      margin-top: 20px;
      display: flex;
      justify-content: center;
    }

    .pagination a {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 30px;
      height: 30px;
      margin: 0 5px;
      text-decoration: none;
      background-color: #f1f1f1;
      border: 1px solid #ddd;
      border-radius: 5px;
      color: #333;
      font-size: 16px;
    }

    .pagination a.active {
      background-color: #004AAD;
      color: white;
    }

    .pagination a:hover {
      background-color: #e0e0e0;
    }

    .pagination a.disabled {
      background-color: #ccc;
      pointer-events: none;
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Sidebar Section -->
    <div class="sidebar" id="sidebar">
      <button class="sidebar-toggle" onclick="toggleSidebar()">â˜°</button>
      <img src="https://via.placeholder.com/80" alt="User Profile Picture">
      <h2><%= userName %></h2>
      <a href="/add-pet">Add your pet</a>
      <a href="/your-pets">Your pets</a>
      <a href="/reservations">Reservation</a>
      <a href="/pethistory">Pet history</a>
      <a href="/logout">Logout</a>
    </div>

    <!-- Reservation List Section -->
    <div class="main-content">
      <h1>Your Reservations</h1>
      <table>
        <tr>
          <th>Pet Name</th>
          <th>Date</th>
          <th>Time</th>
          <th>Symptoms</th>
          <th>Status</th>
        </tr>
        <% reservations.forEach(reservation => { %>
        <tr>
          <td><%= reservation.petName %></td>
          <td><%= reservation.date.toLocaleDateString() %></td>
          <td><%= reservation.time %></td>
          <td><%= reservation.note %></td>
          <td>
            <% if (reservation.isDone) { %>
              <button class="btn completed">COMPLETED</button>
            <% } else { %>
              <button class="btn cancel" onclick="confirmCancel('<%= reservation._id %>')">CANCEL</button>
            <% } %>
          </td>
        </tr>
        <% }) %>
      </table>

      <!-- Pagination controls -->
      <div class="pagination">
        <% if (currentPage > 1) { %>
          <a href="/reservations?page=<%= currentPage - 1 %>">&laquo;</a>
        <% } else { %>
          <a class="disabled">&laquo;</a>
        <% } %>

        <% for (let i = 1; i <= totalPages; i++) { %>
          <a href="/reservations?page=<%= i %>" class="<%= currentPage === i ? 'active' : '' %>"><%= i %></a>
        <% } %>

        <% if (currentPage < totalPages) { %>
          <a href="/reservations?page=<%= currentPage + 1 %>">&raquo;</a>
        <% } else { %>
          <a class="disabled">&raquo;</a>
        <% } %>
      </div>
    </div>
  </div>

  <!-- JavaScript for Cancel Confirmation and Sidebar Toggle -->
  <script>
    function confirmCancel(reservationId) {
      const userConfirmed = confirm("Do you want to cancel your reservation?");
      if (userConfirmed) {
        window.location.href = '/cancel-reservation/' + reservationId;
      }
    }

    function toggleSidebar() {
      const sidebar = document.getElementById('sidebar');
      const mainContent = document.querySelector('.main-content');

      sidebar.classList.toggle('collapsed'); // Toggle collapsed class
      if (sidebar.classList.contains('collapsed')) {
        mainContent.style.width = '95%';
      } else {
        mainContent.style.width = '85%';
      }
    }
  </script>
</body>
</html>
