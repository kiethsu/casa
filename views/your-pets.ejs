<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Pets</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      display: flex;
      height: 100vh;
      background-color: #f5f5f5;
    }

    .container {
      display: flex;
      width: 100%;
      height: 100vh;
    }

    /* Sidebar */
    .sidebar {
      width: 15%;
      background-color: #004AAD;
      padding: 20px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-start;
      transition: width 0.3s ease; /* Add transition for smooth collapse/expand */
    }

    .sidebar.collapsed {
      width: 60px;
      padding: 10px;
    }

    .sidebar img {
      width: 80px;
      height: 80px;
      border-radius: 50%;
      margin-bottom: 15px;
      border: 3px solid #fff;
      transition: transform 0.3s ease;
    }

    .sidebar.collapsed img {
      transform: scale(0);
    }

    .sidebar h2 {
      font-size: 16px;
      margin-bottom: 30px;
      color: white;
      transition: transform 0.3s ease;
    }

    .sidebar.collapsed h2 {
      transform: scale(0);
    }

    .sidebar a {
      text-decoration: none;
      color: white;
      font-size: 16px;
      margin-bottom: 20px;
      display: flex;
      align-items: center;
      width: 100%;
      padding-left: 15px;
      transition: transform 0.3s ease;
    }

    .sidebar.collapsed a {
      transform: scale(0);
    }

    .sidebar a:hover {
      background-color: #3a9a90;
      border-radius: 5px;
    }

    /* Toggle Button */
    .sidebar-toggle {
      position: absolute;
      top: 20px;
      left: 20px;
      background-color: #004AAD;
      border: none;
      color: white;
      cursor: pointer;
      font-size: 18px;
      padding: 10px;
    }

    .main-content {
      width: 85%;
      padding: 40px;
      transition: width 0.3s ease;
    }

    .sidebar.collapsed + .main-content {
      width: 95%;
    }

    /* Table styling */
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    th, td {
      padding: 12px;
      text-align: center;
    }

    th {
      background-color: #004AAD;
      color: white;
      font-weight: bold;
    }

    td {
      color: black;
    }

    tr:nth-child(odd) {
      background-color: #FAF8F8;
    }

    tr:nth-child(even) {
      background-color: white;
    }

    tr:hover {
      background-color: #e0e0e0;
    }

    /* Button styling */
    .btn {
      padding: 8px 10px;
      border: none;
      color: white;
      background-color: #E1B61B;
      border-radius: 5px;
      cursor: pointer;
    }

    .btn:hover {
      background-color: #8FD0B3;
    }

    .btn.delete {
      background-color: #f44336;
    }

    .btn.reserve {
      background-color: #FF9800;
    }

    /* Pagination styling */
    .pagination {
      margin-top: 20px;
      display: flex;
      justify-content: center;
    }

    .pagination a {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 30px;
      height: 30px;
      margin: 0 5px;
      text-decoration: none;
      background-color: #f1f1f1;
      border: 1px solid #ddd;
      border-radius: 5px;
      color: #333;
      font-size: 16px;
    }

    .pagination a.active {
      background-color: #004AAD;
      color: white;
      border-color: #333;
    }

    .pagination a:hover {
      background-color: #e0e0e0;
    }

    .pagination a.disabled {
      background-color: #ccc;
      pointer-events: none;
    }

    /* Modal styles */
    .modal {
      display: none;
      position: fixed;
      z-index: 1;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.7);
      backdrop-filter: blur(4px);
      justify-content: center;
      align-items: center; /* Centers the modal vertically */
      transition: opacity 0.3s ease;
      overflow-y: auto; /* Ensure content fits and can scroll if necessary */
    }

    .modal-content {
      background-color: white;
      padding: 25px;
      border-radius: 10px;
      width: 90%; /* Wider for small screens */
      max-width: 500px; /* Ensures modal doesn't stretch too wide */
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
      position: relative;
      animation: fadeIn 0.3s ease;
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    /* Form styling */
    form {
      display: flex;
      flex-direction: column;
      gap: 15px;
    }

    label {
      font-weight: bold;
    }

    input[type="date"],
    select,
    textarea {
      width: 100%;
      padding: 12px; /* Increased padding */
      border: 1px solid #ccc;
      border-radius: 5px;
      font-size: 16px;
      box-sizing: border-box; /* Ensures padding and border don't affect width */
    }

    input[type="date"],
    select {
      height: 45px; /* Ensures proper height for these elements */
    }

    textarea {
      resize: vertical;
      min-height: 100px; /* Ensures the textarea doesn't collapse */
    }

    button {
      padding: 12px;
      background-color: #004AAD;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 16px;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: #004AAD;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(-20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Sidebar Section -->
    <div class="sidebar" id="sidebar">
      <button class="sidebar-toggle" onclick="toggleSidebar()">â˜°</button>
      <img src="https://via.placeholder.com/80" alt="User Profile Picture">
      <h2><%= userName %></h2>
      <a href="/add-pet"> Add your pet</a>
      <a href="/your-pets"> Your pets</a>
      <a href="/reservations"> Reservation</a>
      <a href="/pethistory"> Pet history</a>
      <a href="/logout"> Logout</a>
    </div>

    <!-- Main content (Pet list) -->
    <div class="main-content">
      <h1>Your Pets</h1>
      <table>
        <tr>
          <th>NAME</th>
          <th>BREED</th>
          <th>DELETE</th>
          <th>ADD RESERVATION</th>
        </tr>
        <% pets.forEach(pet => { %>
        <tr>
          <td><%= pet.petName %></td>
          <td><%= pet.breed %></td>
          <td><button class="btn delete" onclick="confirmDelete('<%= pet._id %>')">DELETE PET</button></td>
          <td>
            <% if (pet.hasPendingConsultation) { %>
              <button class="btn reserve" disabled>You still have a pending consultation</button>
            <% } else { %>
              <button class="btn reserve" onclick="showReservationModal('<%= pet._id %>')">CONSULT YOUR PET</button>
            <% } %>
          </td>
        </tr>
        <% }) %>
      </table>
    
      <!-- Pagination controls -->
      <div class="pagination">
        <% if (currentPage > 1) { %>
          <a href="/your-pets?page=<%= currentPage - 1 %>">&laquo;</a>
        <% } else { %>
          <a class="disabled">&laquo;</a>
        <% } %>
    
        <% for (let i = 1; i <= totalPages; i++) { %>
          <a href="/your-pets?page=<%= i %>" class="<%= currentPage === i ? 'active' : '' %>"><%= i %></a>
        <% } %>
    
        <% if (currentPage < totalPages) { %>
          <a href="/your-pets?page=<%= currentPage + 1 %>">&raquo;</a>
        <% } else { %>
          <a class="disabled">&raquo;</a>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Reservation Modal -->
  <div id="reservationModal" class="modal">
    <div class="modal-content">
      <span class="close" onclick="closeModal('reservationModal')">&times;</span>
      <h2 class="form-title">Consult Your Pet</h2>
      <form id="reservationForm" method="POST">
        <label for="date">Date</label>
        <input type="date" id="date" name="date" required>

        <label for="time">Time</label>
        <select id="time" name="time" required>
          <option value="">Select a time</option>
          <option value="8 AM">8 AM</option>
          <option value="9 AM">9 AM</option>
          <option value="10 AM">10 AM</option>
          <option value="11 AM">11 AM</option>
          <option value="12 PM">12 PM</option>
          <option value="1 PM">1 PM</option>
          <option value="2 PM">2 PM</option>
          <option value="3 PM">3 PM</option>
          <option value="4 PM">4 PM</option>
          <option value="5 PM">5 PM</option>
        </select>
        <label for="note">Notes</label>
        <textarea id="note" name="note" rows="4" required></textarea>

        <button type="submit">Submit Reservation</button>
      </form>
    </div>
  </div>

  <!-- JavaScript for Sidebar, Modal, and Form Action -->
  <script>
    function toggleSidebar() {
      const sidebar = document.getElementById('sidebar');
      const mainSection = document.querySelector('.main-content');

      sidebar.classList.toggle('collapsed');
      if (sidebar.classList.contains('collapsed')) {
        mainSection.style.width = '95%';
      } else {
        mainSection.style.width = '85%';
      }
    }

    function showReservationModal(petId) {
      var form = document.getElementById('reservationForm');
      form.action = '/reserve-pet/' + petId;
      document.getElementById('reservationModal').style.display = "flex";
    }

    function confirmDelete(petId) {
      if (confirm("Are you sure you want to delete this pet?")) {
        fetch('/delete-pet/' + petId, {
          method: 'POST',
        })
        .then(response => {
          if (response.ok) {
            window.location.reload();
          } else {
            alert('Error deleting pet');
          }
        });
      }
    }

    function closeModal(modalId) {
      document.getElementById(modalId).style.display = "none";
    }

    window.onclick = function(event) {
      if (event.target.classList.contains('modal')) {
        event.target.style.display = "none";
      }
    }
    document.getElementById('date').addEventListener('change', async function() {
    const date = this.value;
    const timeSelect = document.getElementById('time');
    
    // Clear all previous options
    for (let i = 0; i < timeSelect.options.length; i++) {
      timeSelect.options[i].disabled = false;
    }

    if (date) {
      try {
        const response = await fetch(`/check-availability?date=${date}`);
        const fullSlots = await response.json();

        // Disable fully booked time slots
        fullSlots.forEach(slot => {
          const option = Array.from(timeSelect.options).find(opt => opt.value === slot);
          if (option) {
            option.disabled = true;
          }
        });
      } catch (err) {
        console.error('Error fetching availability:', err);
      }
    }
  });
  </script>
</body>
</html>
